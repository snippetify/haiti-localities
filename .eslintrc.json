{
    "env": {
        "es6": true,
        "browser": true,
        "mocha": true
    },
    "extends": [
        "standard"
    ],
    "globals": {
        "browser": "readonly",
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "indent": ["error", 4]
    },
    "parser": "babel-eslint"
}